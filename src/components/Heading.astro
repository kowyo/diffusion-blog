---
interface Props {
  as?: "h1" | "h2" | "h3";
}

const { as: Tag = "h1" } = Astro.props;
const variantClasses = {
  h1: "text-[2.25rem] leading-[1.1111] font-extrabold",
  h2: "text-2xl leading-[1.3333] font-bold mt-12",
  h3: "text-xl leading-[1.6] font-semibold mt-12",
};

const baseClasses = "font-heading text-text tracking-tight mb-2";
---

<Tag class:list={[baseClasses, variantClasses[Tag]]}>
  <slot />
</Tag>
