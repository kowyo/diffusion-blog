---
import Heading from "./Heading.astro";
import Prose from "./Prose.astro";
import TableOfContents from "./TableOfContents.astro";

interface Props {
  title: string;
  date: Date;
  description?: string;
  authors?: string | { name: string; link?: string; image?: string }[];
  repo?: string;
  headings?: { depth: number; slug: string; text: string }[];
}

const { title, date, description, authors, repo, headings } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="article">
  <header class="article-header">
    <Heading as="h1">{title}</Heading>
    <div class="article-meta">
      <time datetime={date.toISOString()}>{formattedDate}</time>
      <div class="article-links">
        {
          repo && (
            <a href={repo} target="_blank" rel="noopener noreferrer" class="meta-link">
              <svg class="meta-icon" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
              GitHub Repository
            </a>
          )
        }
        <button id="export-pdf" class="meta-link print-btn">
          <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polyline points="6 9 6 2 18 2 18 9"></polyline><path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path><rect x="6" y="14" width="12" height="8"></rect></svg>
          Download PDF
        </button>
      </div>
      {
        authors && (
          <div class="article-authors">
            {typeof authors === "string" ? (
              authors
            ) : (
              <ul class="author-list">
                {authors.map((author) => (
                  <li class="author-item">
                    {author.image && (
                      <img src={author.image} alt={author.name} class="author-image" />
                    )}
                    {author.link ? (
                      <a href={author.link} target="_blank" rel="noopener noreferrer" class="author-link">
                        {author.name}
                      </a>
                    ) : (
                      <span class="author-name">{author.name}</span>
                    )}
                  </li>
                ))}
              </ul>
            )}
          </div>
        )
      }
    </div>
  </header>

  <div class="article-body">
    <Prose>
      <slot />
    </Prose>
  </div>

  {headings && headings.length > 0 && <TableOfContents headings={headings} />}
</article>

<style>
  .article {
    margin: var(--space-lg) 0 var(--space-2xl);
  }

  .article-header {
    margin-bottom: 1.5rem;
  }

  @media (max-width: 640px) {
    .article-header :global(h1) {
      font-size: 1.25rem;
    }
  }

  .article-meta {
    font-family: var(--font-body);
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-text);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .author-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    column-gap: 0.75rem;
    row-gap: 0;
    align-items: center;
  }

  .author-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .author-image {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-link {
    color: inherit;
    text-decoration: none;
    font-weight: 500;
  }

  .author-link:hover {
    text-decoration: underline;
  }

  .article-links {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .meta-link {
    color: inherit;
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    line-height: inherit;
    gap: 0.375rem;
    width: fit-content;
  }

  .meta-link:hover {
    text-decoration: underline;
  }

  .meta-icon {
    width: 0.875em;
    height: 0.875em;
    flex-shrink: 0;
    display: block;
    margin-bottom: 0.1em;
  }

  @media print {
    .print-btn {
      display: none;
    }
  }

  .print-btn {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    font-family: inherit;
    font-size: inherit;
  }
</style>

<script>
  const exportBtn = document.getElementById("export-pdf");
  exportBtn?.addEventListener("click", () => {
    window.print();
  });

  // Inject copy buttons into every code block
  const COPY_ICON = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>`;
  const CHECK_ICON = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>`;

  document.querySelectorAll("pre").forEach((pre) => {
    const btn = document.createElement("button");
    btn.className = "copy-code-btn";
    btn.innerHTML = COPY_ICON;
    btn.setAttribute("aria-label", "Copy code to clipboard");
    pre.appendChild(btn);

    btn.addEventListener("click", async () => {
      const code = pre.querySelector("code")?.innerText ?? pre.innerText;
      await navigator.clipboard.writeText(code);
      btn.innerHTML = CHECK_ICON;
      btn.classList.add("copied");
      setTimeout(() => {
        btn.innerHTML = COPY_ICON;
        btn.classList.remove("copied");
      }, 2000);
    });
  });
</script>
