---
import Heading from "./Heading.astro";
import Prose from "./Prose.astro";

interface Props {
  title: string;
  date: Date;
  description?: string;
  authors?: string | { name: string; link?: string; image?: string }[];
  repo?: string;
}

const { title, date, description, authors, repo } = Astro.props;

const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="article">
  <header class="article-header">
    <Heading as="h1">{title}</Heading>
    <div class="article-meta">
      <time datetime={date.toISOString()}>{formattedDate}</time>
      {
        repo && (
          <a href={repo} target="_blank" rel="noopener noreferrer" class="repo-link">
            <svg class="github-icon" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path></svg>
            GitHub Repository
          </a>
        )
      }
      {
        authors && (
          <div class="article-authors">
            {typeof authors === "string" ? (
              authors
            ) : (
              <ul class="author-list">
                {authors.map((author) => (
                  <li class="author-item">
                    {author.image && (
                      <img src={author.image} alt={author.name} class="author-image" />
                    )}
                    {author.link ? (
                      <a href={author.link} target="_blank" rel="noopener noreferrer" class="author-link">
                        {author.name}
                      </a>
                    ) : (
                      <span class="author-name">{author.name}</span>
                    )}
                  </li>
                ))}
              </ul>
            )}
          </div>
        )
      }
    </div>
  </header>
  <Prose>
    <slot />
  </Prose>
</article>

<style>
  .article {
    max-width: var(--width-page);
    margin: var(--space-lg) auto var(--space-2xl);
  }

  .article-header {
    margin-bottom: 1.5rem; /* Reduced from 2rem */
  }

  .article-meta {
    font-family: var(--font-body);
    font-size: 0.875rem;
    color: var(--color-text);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .article-authors {
    margin-top: 0.125rem;
  }

  .author-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .author-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .author-image {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    object-fit: cover;
  }

  .author-link {
    color: inherit;
    text-decoration: none;
    font-weight: 500;
  }

  .author-link:hover {
    text-decoration: underline;
  }

  .repo-link {
    color: inherit;
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    width: fit-content;
  }

  .repo-link:hover {
    text-decoration: underline;
  }

  .github-icon {
    width: 0.875em;
    height: 0.875em;
    flex-shrink: 0;
    display: block;
    margin-bottom: 0.1em;
  }
</style>
