---
const currentPath = Astro.url.pathname;
---

<nav class="nav">
  <a href="/" class="nav-brand">EE5311 Group 7</a>
  <div class="nav-links">
    <a href="/rss.xml">RSS</a>
  </div>
</nav>

<style>
  .nav {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: var(--space-lg) 0;
    margin-bottom: 0;
  }

  .nav-brand {
    font-family: var(--font-heading);
    font-size: 1.875rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    text-decoration: none;
    color: var(--color-text);
  }

  .nav-brand:hover {
    color: var(--color-text-secondary);
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
  }

  .nav-links a {
    font-family: var(--font-heading);
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    text-decoration: none;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-text);
  }
</style>
